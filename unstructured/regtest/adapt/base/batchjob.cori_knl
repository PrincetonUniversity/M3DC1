#!/bin/bash
#SBATCH -p debug
#SBATCH -C knl,quad,cache
#SBATCH -N 1
#SBATCH -J m3dc1_regtest_adapt
#SBATCH -t 0:10:00
#SBATCH -o C1stdout

touch started

# partition mesh
part_mesh.sh circle-0.02-0.0-0.0-2K.smb 16
echo $? > mesh_partitioned

# Run M3D-C1
$M3DC1_MPIRUN -n 16 -c 4 m3dc1_2d
mv ts0-adapted0.smb adapted0.smb
$M3DC1_MPIRUN -n 16 -c 4 collapse circle-0.02-0.0-0.0.dmg adapted.smb mesh.smb 16

if ! [ -f mesh0.smb ]; then
    echo 0 > C1ke
fi

touch finished
