##SBATCH --qos=<qos_name>             # quality of service
#SBATCH --job-name=M3DC1_regtest_RMP
#SBATCH -o C1stdout

touch started

#create_mesh.sh
#echo $? > mesh_created

cd $CINECA_SCRATCH
mkdir -p RMP
cd RMP
cp -p $SLURM_SUBMIT_DIR/* .

part_mesh.sh diiid-0.02-2.5-4.0-4K.smb 32
echo $? > mesh_partitioned

# Run M3D-C1
srun -n 32 -c 1 m3dc1_2d_complex -pc_factor_mat_solver_type mumps

touch finished

mv equilibrium.h5 time_*.h5 C1.h5 C1ke finished C1stdout $SLURM_SUBMIT_DIR
