#!/bin/bash
#SBATCH -p m3dc1
#SBATCH -n 64
#SBATCH --mem-per-cpu=2000M
#SBATCH -J M3DC1_regtest_RMP_nonlin
#SBATCH -t 0:30:00
#SBATCH -o C1stdout

touch started

# partition mesh
part_mesh.sh circle-0.10-0.0-0.0-1K.smb 4
echo $? > mesh_partitioned

# Run M3D-C1
export OMP_NUM_THREADS=4
$M3DC1_MPIRUN -n 16 m3dc1_3d_omp -ipetsc -options_file options_bjacobi.type_superludist

touch finished
