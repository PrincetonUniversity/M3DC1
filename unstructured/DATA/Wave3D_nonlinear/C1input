	ntimemax = 5	! number of time steps
	ntimepr = 5	! number of time steps per output
	iprint = 0	! 1 = print detailed debug info
	itimer = 1	! 1 = print timing info

	irestart = 0
	iwrite_restart = 0

	ike_only = 1


! NUMERICAL METHOD OPTIONS
