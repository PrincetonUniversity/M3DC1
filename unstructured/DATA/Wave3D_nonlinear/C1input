	dt = 0.1	! time step

	integrator = 0	! 0 = Crank-Nicholson, 1 = BDF2
	thimp = 0.5	! implicitness parameter for CN

	isplitstep = 0
	imp_mod = 1

	regular = 0.

	deex = 1.0
	hyper  = 0.	! hyper-resistivity (applied to psi)
	hyperi = 0.	! hyper-resistivity (applied to Bz )
	hyperv = 0.0	! hyper-viscosity   (applied to vz )
	hyperc = 0.0    ! hyper-viscosity   (applied to chi)
	hyperp = 0.0    ! hyper-pressure-diffusion
	ihypeta = 0
	ihypdx = 0

	int_pts_main = 25
	int_pts_diag = 25
	int_pts_aux = 25


! MODEL OPTIONS
! =============
	linear = 0	! 0 = nonlinear; 1 = linear
	eqsubtract = 0	! 1 = subtract equilibrium in nonlinear simulations
      	numvar = 1	! 1 = 2-field; 2 = 4-field; 3 = 6-field
      	idens = 0	! 1 = advance density
	ipres = 0       ! 1 = include electron pressure equation
	gyro = 0
	inertia = 0
	itwofluid = 0

	jadv = 1


! BOUNDARY_CONDITIONS
