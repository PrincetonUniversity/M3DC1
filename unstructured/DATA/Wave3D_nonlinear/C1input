	inoslip_pol = 0
	inoslip_tor = 1
	inonormalflow = 1
	inocurrent_pol = 0
	inocurrent_tor = 0
	inocurrent_norm = 0

	isurface = 0


! PHYSICAL PARAMETERS
! ===================
	bzero = 1.	! toroidal field strength
	p0 = 0.08	! total pressure
	pi0 = 0.04	! ion pressure

	gravr = 0.0      ! gravitational acceleration
	gravz = 0.0

	etar = 0.	! resistivity = etar + eta0/T^(3/2)
	eta0 = 0.
      	amu = 0.	! kinematic viscosity 
	amuc = 0.
	denm = 0.	! density diffusion
	kappat = 0.	! isotropic thermal conductivity
	kappa0 = 0.	!  kappa = kappat + kappa0*p/T^(3/2)
	kappar = 0.	! field-aligned thermal conductivity

	gam = 1.66666666666667	! adiabatic constant

!	db = 5.1e-2



! EQUILIBRIUM OPTIONS
! ===================
	itor = 0	! 1 = toroidal geometry, 0 = slab geometry

      	itaylor = 14	! determines initial conditions

 	xzero = 0.185	! x coordinate of lower-left corner of box
	zzero = -1.45	! y coordinate of lower-left corner of box

	eps = 1.e-2	! size of initial perturbation

	xmag = 1.
	zmag = 0.

	nplanes = 2
	ntor = 1

	xnull = 1.
	znull = 0.


! NORMALIZATIONS
