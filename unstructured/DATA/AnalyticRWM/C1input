 &inputnl
!
!
! OUTPUT OPTIONS
! ==============
	ntimepr = 010	! number of time steps per output
	iprint = 0	! 1 = print detailed debug info
	itimer = 1	! 1 = print timing info
!
!
! NUMERICAL METHOD OPTIONS
! ========================
!
	integrator = 0	! 0 = Crank-Nicholson, 1 = BDF2
	thimp = 0.55	! implicitness parameter for CN
	imp_mod = 0     ! if 0, original way;  if 1, Caramana way
!
	jadv = 1        ! if 0 advance psi;    if 1, advance Jphi
!
	deex = 1.0      ! scale length for the hyper terms
	hyper  = 0.0    ! hyper-resistivity (applied to psi)
	hyperi = 0.0    ! hyper-resistivity (applied to Bz )
	hyperv = 0.0    ! hyper-viscosity   (applied to vz )
	hyperc = 0.0    ! hyper-viscosity   (applied to chi)
	hyperp = 0.0    ! hyper-pressure-diffusion
!
	dt = 5.0000		! time step
	ntimemax = 100	! number of time steps
        isplitstep = 1  ! if 1, velocity and magnetic field adv separately
!
!
! MODEL OPTIONS
! =============
	linear = 1	! 0 = nonlinear; 1 = linear
	eqsubtract = 1	! 1 = subtract equilibrium in nonlinear simulations
      	numvar = 2	! 1 = 1-field; 1 = 4-field;  3 = 6-field
      	idens = 0	! 1 = advance density
	ipres = 0       ! 1 = include pressure equation as separate equation
	gyro = 0
!
!
	regular = 1.e-6      !  regularization constant in chi equation
!
	ipellet = 0          !  if 1, include pellet injection density source
!
!
! PHYSICAL PARAMETERS
! ==================
	bzero = 1.	! toroidal field strength at xzero
	vzero = 0.
	p0 =  .00100	! total pressure
	pi0 = .00050 	! ion pressure
!
	gravr = 0.0      ! gravitational acceleration
	gravz = 0.0
!
!.......new resistivity function
        iresfunc = 0    ! standard resistivity function
        etar = 10.
        eta0 = 0
        ivisfunc = 0
      	amu = .001	! kinematic viscosity
	amuc = 0.
	denm = 0.	! density diffusion
	kappat = 0.	! isotropic thermal conductivity
	kappa0 = 0.	!   kappa = kappat + kappa0*p/T^(3/2)
	kappar = 0.	! field-aligned thermal conductivity
!
	gam = 1.66666666666667	! adiabatic constant
!
	db = 0.0	! ion skin depth
!
	iper = 0	! 1 = periodic in r
        jper = 0	! 1 = periodic in z
!
	vloop = 0.      ! applied loop voltage
!
! boundary conditions
!
!
! EQUILIBRIUM OPTIONS
! ===================

      	itaylor = 12	! determines initial conditions
      iconst_bz = 0
       iconst_bn = 0
  iconstflux = 0
			! 0: Tilting Cylinder
			! 1: Taylor reconnection
			! 2: Force-free Taylor state
			! 3: GEM-reconnection
			! 4: Wave propagation
			!10: Decay of current in a cylinder using analytic matrix
			!11: Decay of current in a cylinder using Vacuum code matrix
!
	eps = 1.0e-2 	! size of initial perturbation
	irestart = 0	! 1 = read restart
        ike_only = 0
!
!
!
! TOROIDAL GEOMETRY OPTIONS
! =========================
	itor = 0	! 1 = toroidal geometry, 0 = slab geometry
 	xzero = 1.0	! major radius of device (rzero=xzero)
	zzero = 0.0	! y coordinate of lower-left corner of box
	xlim = 1.	! limiting value of x
        ivform = 1
        ibform = 1
!
	ntor = 3
!
! RESISTIVE WALL OPTIONS
! ======================
        eta_wall = 1.e-7
        delta_wall = .0010
        mpol = 3
!
        iadapt = 0    !  mesh adaptation
        iglobalout = 0
        iglobalin = 0
        int_pts_main = 25
        int_pts_aux  = 25
        int_pts_diag = 25
        icsym = 1
        inoslip_pol = 1
        inoslip_tor = 1
        isurface = 1
        nonrect = 1


        ifixedb = 1
        inumgs = 0   ! read p and g from files from profiles-p and profiles-g
        iread_jsolver = 0   !  if 1, reads profiles from "fixed"
