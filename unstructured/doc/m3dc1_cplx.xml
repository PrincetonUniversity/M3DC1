<?xml version="1.0"?>
<adios-config host-language="Fortran">

   <adios-group name="restart" coordination-communicator="comm">
       <var name="numnodes" gread="inumnodes" type="integer"/>
       <var name="numelms" gread="inumelms" type="integer"/>
       <var name="mmnn18" gread="immnn18" type="integer"/>
       <var name="numvar" gread="inumvar" type="integer"/>
       <var name="iper" gread="iiper" type="integer"/>
       <var name="jper" gread="ijper" type="integer"/>
       <var name="myrank" gread="imyrank" type="integer"/>
       <var name="maxrank" gread="imaxrank" type="integer"/>
       <var name="eqsubtract" gread="ieqsubtract" type="integer"/>
       <var name="linear" gread="ilinear" type="integer"/>
       <var name="icomplex" gread="icomp" type="integer"/>

       <var name="ntime" type="integer"/>
       <var name="time" type="double"/>
       <var name="dt" type="double"/>
       <var name="totcur0" type="double"/>
       <var name="tflux0" type="double"/>
       <var name="gbound" type="double"/>
       <var name="ptot" type="double"/>
       <var name="vloop" type="double"/>
       <var name="psimin" type="double"/>
       <var name="psilim" type="double"/>
       <var name="psibound" type="double"/>
       <var name="xnull" type="double"/>
       <var name="znull" type="double"/>
       <var name="xmag" type="double"/>
       <var name="zmag" type="double"/>

       <var name="ndofs_1" type="integer"/>
       <var name="ndofs_2" type="integer"/> 

       <var name="tmp_field_vec"   type="double complex" dimensions="ndofs_1"/>
       <var name="tmp_field0_vec"  type="double complex" dimensions="ndofs_1"/>

       <var name="tmp_bf_field_1"  type="double complex" dimensions="ndofs_2"/>
       <var name="tmp_bf_field_0"  type="double complex" dimensions="ndofs_2"/>
   </adios-group>

<method group="restart"  method="MPI_AMR"/>
<buffer size-MB="55" allocate-time="now"/>
</adios-config>
