#%Module1.0
##

## Required internal variables

set             name            m3dc1
set             version         devel-knl
set             root            $env(M3DC1_CODE_DIR)

## List conflicting modules here

conflict $name

## List prerequisite modules here

set             fullname        M3D-C1
set             externalurl     http://w3.pppl.gov/~nferraro/m3dc1.html
set             description     "M3D-C1 is an extended-MHD code"

## Required for "module help ..."

proc ModulesHelp { } {
  global description externalurl
  puts stderr "Description - $description"
  puts stderr "Other Docs  - $externalurl"
}

## Required for "module display ..." and SWDB

module-whatis                   "$description"

## Software-specific settings exported to user environment

if { [ is-loaded craype-haswell ] } {
  module unload craype-haswell
}
if { ! [ is-loaded craype-mic-knl ] } {
  module load craype-mic-knl
}
if { ! [ is-loaded intel/19.1.2.254 ] } {
  module unload intel
  module load intel/19.1.2.254
}
if { ! [ is-loaded cray-mpich/7.7.19 ] } {
  module load cray-mpich/7.7.19
}
if { ! [ is-loaded cray-hdf5-parallel/1.12.1.1 ] } {
  module load cray-hdf5-parallel/1.12.1.1
}
#if { ! [ is-loaded cray-netcdf-hdf5parallel/4.8.1.1 ] } {
#  module load cray-netcdf-hdf5parallel/4.8.1.1
#}
if { ! [ is-loaded cray-fftw/3.3.8.10 ] } {
  module load cray-fftw/3.3.8.10
}
if { ! [ is-loaded gsl/2.7 ] } {
  module load gsl/2.7
}
if { ! [ is-loaded idl ] } {
  module load idl
}

setenv          M3DC1_VERSION   $version
setenv          M3DC1_DIR       $root
setenv		M3DC1_ARCH	cori_knl
setenv		M3DC1_MPIRUN	srun

prepend-path    PATH             $root/unstructured/_cori_knl/bin
prepend-path    IDL_PATH         $root/unstructured/idl
